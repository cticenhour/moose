[Tests]
  issues = '#3988'
  design = 'InputParameters.md'

  [vector_len_checks]
     requirement = 'The system shall support vector size checking on input parameter vectors:'

     [realvectorlength]
       type = 'RunException'
       input = 'all_pass.i'
       expect_err = "CLI_ARGS: Range check failed for parameter Materials/vecrangecheck/rv3; expression = 'rv3_size = 3'"
       cli_args = 'Materials/vecrangecheck/rv3="1.0 2.0"'

       detail = 'for ints,'
     []
     [intvectorlength]
       type = 'RunException'
       input = 'all_pass.i'
       expect_err = "CLI_ARGS: Range check failed for parameter Materials/vecrangecheck/iv3; expression = 'iv3_size = 3'"
       cli_args = 'Materials/vecrangecheck/iv3="1 2"'

       detail = 'for Reals.'
     []
  []

  [vector_elem_checks]
    requirement = 'The system shall support vector element checking:'

    [all_element_check]
      type = 'RunException'
      input = 'all_pass.i'
      expect_err = "CLI_ARGS: Range check failed for parameter Materials/vecrangecheck/rvp; expression = 'rvp > 0', component 1"
      cli_args = 'Materials/vecrangecheck/rvp="1.0 -2.0 3.0"'

      detail = 'against constant expressions,'
    []
    [elementcompare_unsigned_int]
      type = 'RunException'
      input = 'all_pass.i'
      expect_err = "CLI_ARGS: Range check failed for parameter Materials/vecrangecheck/uvg; expression = 'uvg_0 > uvg_1'"
      cli_args = 'Materials/vecrangecheck/uvg="1 2"'

      detail = 'against other unsigned int vector elements,'
    []
    [elementcompare_long]
      type = 'RunException'
      input = 'all_pass.i'
      expect_err = "CLI_ARGS: Range check failed for parameter Materials/vecrangecheck/lvg; expression = 'lvg_0 > lvg_1'"
      cli_args = 'Materials/vecrangecheck/lvg="1 2"'

      detail = 'against other long vector elements,'
    []
    [elementcompare_int]
      type = 'RunException'
      input = 'all_pass.i'
      expect_err = "CLI_ARGS: Range check failed for parameter Materials/vecrangecheck/ivg; expression = 'ivg_0 > ivg_1'"
      cli_args = 'Materials/vecrangecheck/ivg="1 2"'

      detail = 'against other int vector elements, and'
    []
    [elementcompare_real]
      type = 'RunException'
      input = 'all_pass.i'
      expect_err = "CLI_ARGS: Range check failed for parameter Materials/vecrangecheck/rvg; expression = 'rvg_0 > rvg_1'"
      cli_args = 'Materials/vecrangecheck/rvg="1.0 2.0"'

      detail = 'against other Real vector elements.'
    []
  []

  [outofbounds]
    type = 'RunException'
    input = 'all_pass.i'
    expect_err = "CLI_ARGS: Error parsing expression 'rvl_10 > 0' for parameter Materials/vecrangecheck/rvl; out of range variable 'rvl_10'"
    cli_args = 'Materials/vecrangecheck/rvl="1.0 2.0"'

    requirement = 'The system shall support vector bounds checking on input parameter vectors.'
  []
  [checkempty]
    type = 'RunException'
    input = 'all_pass.i'
    expect_err = "CLI_ARGS: Range checking empty vector parameter Materials/vecrangecheck/rvp; expression = 'rvp > 0'"
    cli_args = 'Materials/vecrangecheck/rvp=""'

    requirement = 'The system shall support checking for non-empty input parameter vectors.'
  []
[]
